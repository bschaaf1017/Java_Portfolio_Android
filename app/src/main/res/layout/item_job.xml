<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <ImageView
            android:id="@+id/image_view_job_icon"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_margin="12dp"
            />

        <TextView
            android:id="@+id/text_view_app_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/image_view_job_icon"
            android:layout_toRightOf="@id/image_view_job_icon"
            android:text="Epic Video Tech"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_position"
            android:layout_toEndOf="@id/image_view_job_icon"
            android:text="cable application android devices"
            android:layout_below="@id/text_view_app_title"
            android:layout_toRightOf="@id/image_view_job_icon"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_dates"
            android:layout_toEndOf="@id/image_view_job_icon"
            android:layout_toRightOf="@id/image_view_job_icon"
            android:layout_below="@id/text_view_position"
            android:layout_marginTop="5dp"
            android:text="pressent"
            android:textStyle="italic"
            />


    </RelativeLayout>

</androidx.cardview.widget.CardView>