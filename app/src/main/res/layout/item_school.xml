<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <ImageView
            android:id="@+id/image_view_school_icon"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_margin="12dp" />

        <TextView
            android:id="@+id/text_view_school_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@id/image_view_school_icon"
            android:layout_toRightOf="@id/image_view_school_icon"
            android:text="Hack Reactor"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_studied"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_school_name"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/image_view_school_icon"
            android:layout_toRightOf="@id/image_view_school_icon"
            android:text="SWE immersive program"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/text_view_dates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_studied"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/image_view_school_icon"
            android:layout_toRightOf="@id/image_view_school_icon"
            android:text="2021"
            android:textStyle="italic" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>